<div class="header-row">
    <h3>Certificates</h3>
    <a class="btn btn-primary" href="/certificate">Create New</a>
</div>
<table class="table table-striped">
    <thread>
        <tr>
            <th>Person</th>
            <th>Tests</th>
            <th>Vaccines</th>
            <th>Actions</th>
        </tr>
    </thread>
    <tbody>
        {{#each list}}
        <tr>
            <td>First Name: {{this.person.first_name}}<br>
                Last Name: {{this.person.last_name}}<br>
                Email: {{this.person.email}}<br>
                Phone Number: {{this.person.phone_number}}<br>
                CF: {{this.person.CF}}<br>
                is a doctor: {{this.person.is_doctor}}</td>
            <td><a class="actions btn btn-secondary btn-sm" href="/certificate/{{this.id}}/tests">Tests</a></td>
            <td><a class="actions btn btn-secondary btn-sm" href="/certificate/{{this.id}}/vaccines">Vaccines</a></td>
            <td>
                <div class="actions">
                    <a class="btn btn-primary btn-sm mr-1" href="/certificate/{{this.id}}">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/certificate/{{this.id}}/delete"
                        onclick="return confirm('Are you sure you want to delete this certificate?');">Delete</a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

