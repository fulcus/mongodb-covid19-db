
<div class="header-row">
    <h3>Tests</h3>
    <a class="btn btn-primary" href="/certificate/{{cert_id}}/testsAddOrEdit">Create New</a>
</div>
<table class="table table-striped">
    <thread>
        <tr>
            <th>#</th>
            <th>Outcome</th>
            <th>Date</th>
            <th>Covid Center</th>
            <th>Health Worker</th>
            <th>Actions</th>
        </tr>
    </thread>
    <tbody>
        {{#each tests}}
        <tr>
            <td>{{@index}}</td>
            <td>{{this.outcome}}</td>
            <td>{{this.date}}</td>
            <td>Name: {{this.covid_center.name}}<br>
            Address: {{this.covid_center.address}}<br>
            Type: {{this.covid_center.center_type}}<br></td>
            <td>First Name: {{this.health_worker.first_name}}<br>
            Last Name: {{this.health_worker.last_name}}<br>
            Phone Number: {{this.health_worker.phone_number}}<br>
            Email: {{this.health_worker.email}}</td>
            <td>
                <div class="actions">
                    <a class="btn btn-primary btn-sm mr-2" href="/certificate/{{@root.cert_id}}/testsAddOrEdit/{{this._id}}">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/certificate/{{@root.cert_id}}/test/{{this._id}}/delete"
                        onclick="return confirm('Are you sure you want to delete this test?');">Delete</a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

