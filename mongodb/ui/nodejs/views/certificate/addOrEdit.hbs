<h3>{{viewTitle}}</h3>

<form action='/certificate' method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{certificate._id}}">

    <div class="form-group">
        <div id="title">- Person</div>
        <input type="hidden" name="id" value="{{certificate.person.id}}">

        <div id="body">First Name</div>
        <input type="text" id="input" name="person" placeholder="First Name" value="{{certificate.person.first_name}}">
