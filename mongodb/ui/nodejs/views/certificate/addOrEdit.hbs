        <input type="text" id="input" name="person" placeholder="Last Name" value="{{certificate.person.last_name}}">
        <br><div id="body">Email</div>
        <input type="text" id="input" name="person" placeholder="Email" value="{{certificate.person.email}}">
        <br><div id="body">Phone Number</div>
        <input type="text" id="input" name="person" placeholder="Phone Number" value="{{certificate.person.phone_number}}">
        <br><div id="body">CF</div>
        <input type="text" id="input" name="person" placeholder="CF" value="{{certificate.person.CF}}">
        <br><div id="body">Is it a doctor?</div>
        <input type="text" id="input" name="person" placeholder="true/false" value="{{certificate.person.is_doctor}}">
    </div>

